<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/restaurants_shape"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/restaurants_item_imageView"
                android:scaleType="fitXY"
                android:src="@drawable/tacos"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_shape"/>
        </LinearLayout>

        <TextView
            android:id="@+id/restaurants_item_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Restaurant XYZ"
            android:textColor="#65000B"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/restaurants_item_distance"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:text="âˆž Km"
            android:gravity="center"
            android:textColor="#65000B"
            android:fontFamily="sans-serif-black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>